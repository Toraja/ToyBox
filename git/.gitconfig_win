; gitconfig with Windows specific configuration
; Create symlink to this file

[include]
	path = ~/toybox/git/.gitconfig

[diff]
	tool = gvimdiff

[difftool "gvimdiff"]
	cmd = ~/coding/tools/Vim/vim81/gvim.exe -dO $LOCAL $REMOTE

[merge]
	tool = gvimdiff

[mergetool "gvimdiff"]
	cmd = ~/coding/tools/Vim/vim81/gvim.exe -dO $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = false
